{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "rootDir": ".",
    "outDir": ".ts-out",
    "skipLibCheck": true
  },
  "include": [
    "javascript-src/**/*.ts",
    "javascript-src/**/*.d.ts",
    "javascript/**/*.js",
    "script.js"
  ],
  "exclude": [
    "node_modules",
    "javascript/**/*.d.ts",
    "**/*.min.js",
    "extensions",
    "extensions-builtin",
    "legacy"
  ]
}
